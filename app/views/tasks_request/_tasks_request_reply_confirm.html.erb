<div class="modal-dialog modal-dialog-fluid modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">依頼タスク返信一覧</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-bordered table-condensed table-hover" id="table-attendances">
            <thead>
              <tr>
                <th>件名</th>
                <th>詳細</th>
                <th>開始日（予定）</th>
                <th>終了日（予定）</th>
                <th>依頼先</th>
                <th>返答</th>
                <th>コメント（依頼先）</th>
              </tr>
            </thead>
            <% @reply_tasks.each do |task| %>
              <% contractor = User.find(task.contractor) %>
              <tbody>
                <tr>
                  <td><%= task.title %></td>
                  <td><%= task.details %></td>
                  <td><%= task.start %></td>
                  <td><%= task.end %></td>
                  <td><%= contractor.name %></td>
                  <td><%= task.request_reply %></td>
                  <td><%= task.request_comment %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
